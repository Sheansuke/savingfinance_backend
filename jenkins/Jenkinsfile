/* groovylint-disable-next-line CompileStatic */
pipeline {
    agent none
    stages {
        stage('Back-end') {
            agent {
                docker { image 'maven:3.8.1-adoptopenjdk-11' }
            }
            steps {
                sh 'docker image initialized'
            }
        }
        stage('build') {
            steps {
                echo 'executing yarn'
                nodejs('SavingFinanceNode') {
                    sh 'yarn install'
                }
            }
        }
    }
}

